<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FCFCFC">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_error"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:src="@drawable/error_image"
            android:layout_marginTop="@dimen/default_112dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/error_screen_fragment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ops, algo saiu do controle."
            android:textSize="@dimen/default_22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/default_56dp"
            app:layout_constraintTop_toBottomOf="@+id/image_error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/error_screen_fragment_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estamos trabalhando para solucionÃ¡-lo!"
            android:textSize="@dimen/default_16sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/default_10dp"
            app:layout_constraintTop_toBottomOf="@+id/error_screen_fragment_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>