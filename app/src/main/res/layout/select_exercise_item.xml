<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_10dp"
    android:background="@drawable/rounded_item_bg"
    android:padding="@dimen/default_8dp">

    <ImageView
        android:id="@+id/select_exercise_item_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/category_chest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_exercise_item_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/default_8dp"
        android:layout_marginStart="@dimen/default_10dp"
        android:textSize="@dimen/default_22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/select_exercise_item_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Peito" />

    <TextView
        android:id="@+id/select_exercise_item_qtd"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/default_10dp"
        android:layout_marginTop="@dimen/default_5dp"
        android:textSize="@dimen/default_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/select_exercise_item_image"
        app:layout_constraintTop_toBottomOf="@id/select_exercise_item_name"
        tools:text="33" />


</androidx.constraintlayout.widget.ConstraintLayout>